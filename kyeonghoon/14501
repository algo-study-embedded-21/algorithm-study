#include<iostream>
#include<vector>
using namespace std;

int score;
int n;

void dfs(int day, int sum, vector<int> t,vector<int> p) {
	if (day > n + 1) {
		return;
	}
	if (day == n + 1) {
		if (sum > score) {
			score = sum;
		}
		return;
	}
	dfs(day + t[day], sum + p[day], t, p);
	dfs(day + 1, sum, t, p);
}

int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0);

	cin >> n;
	vector<int> t(n+1);
	vector<int> p(n+1);

	for (int i = 1; i <= n; i++) {
		cin >> t[i] >> p[i];
	}
	int day = 1;
	int sum = 0;
	dfs(day, sum, t, p);
	cout << score << '\n';
	return 0;
}
